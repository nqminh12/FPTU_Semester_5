@using Question2.Models;

@{
    List<Employee> listE = (List<Employee>)Model;
    List<Order> listO = (List<Order>)ViewBag.Orders;
}

<style>
    /* Define a CSS class for styling tables */
    .table-style {
        border-collapse: collapse;
        width: 100%;
        border: 1px solid #ccc;
    }

        .table-style th, .table-style td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        .table-style th {
            background-color: #f2f2f2;
        }

        /* Optional styles for even and odd rows (zebra striping) */
        .table-style tr:nth-child(even) {
            background-color: #f5f5f5;
        }

</style>
<div style="display: flex; width:100%">

    <div style="flex:1">
        <h1> Employees</h1>
        @foreach (Employee e in listE)
        {
            <a href="#">@(e.FirstName + " " + e.LastName)</a>
            <br />
        }
    </div>

    <div style="flex:1">
        <h1>List of Orders</h1>

        <table class="table-style">
            <thead>
                <tr>
                    <td>OrderDate</td>
                    <td>RequiedDate</td>
                    <td>ShipedDate</td>
                    <td>Freight</td>
                    <td>Employee</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Order o in listO)
                {
                    <tr>
                        <td>@o.OrderDate</td>
                        <td>@o.RequiredDate</td>
                        <td>@o.ShippedDate</td>
                        <td>@string.Format("{0:0.00}", o.Freight)</td>
                        <td>@(o.Employee.FirstName + " " + o.Employee.LastName)</td>
                        <td>
                            <a href="#">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
</div>


